<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombre"
        android:layout_toEndOf="@+id/ivCaratula"
        android:text="Nombre"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivCaratula"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/ivCaratula"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTelefono"
        android:layout_toEndOf="@+id/ivCaratula"
        android:text="Teléfono"
        android:layout_below="@+id/tvNombre"
        android:layout_toRightOf="@+id/ivCaratula"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvValoracion"
        android:layout_toEndOf="@+id/ivCaratula"
        android:text="Valoración"
        android:textSize="15dp"
        android:layout_above="@+id/tvFnac"
        android:layout_toRightOf="@+id/ivCaratula" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha nacimiento"
        android:id="@+id/tvFnac"
        android:layout_toEndOf="@+id/ivCaratula"
        android:layout_alignBottom="@+id/ivCaratula"
        android:layout_toRightOf="@+id/ivCaratula" />

</RelativeLayout>